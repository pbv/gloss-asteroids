build-type:     Simple
cabal-version:  >= 1.10

executable gloss-asteroids
  main-is: Main.hs
  hs-source-dirs:
    src
  ghc-options: -threaded -O2 -rtsopts
  build-depends:
    base >= 4.7 && < 5,
    random,
    gloss
  default-language: Haskell2010

